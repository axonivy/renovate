{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Keep dependencies on all master branches up-to-date and automatically merge dev dependencies",
    "extends": [
        "config:recommended"
    ],
    "baseBranches": [
        "master"
    ],
    "packageRules": [
        {
            "automerge": true,
            "matchDepTypes": [
                "require-dev"
            ]
        }
    ]
}
