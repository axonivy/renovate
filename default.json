{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "description": "Keep dependencies on all active branches up-to-date",
    "extends": [
        "config:recommended"
    ],
    "baseBranches": [
        "master",
        "release/12.0",
        "release/10.0"
    ],
    "packageRules": [
        {
            "description": "Disable major upgrades for project-build-plugin on release/10.0",
            "matchBaseBranches": [
                "release/10.0"
            ],
            "matchManagers": ["maven"],
            "matchPackageNames": [
                "com.axonivy.ivy.ci:project-build-plugin"
            ],
            "matchUpdateTypes": ["major"],
            "enabled": false
        }
    ]
}
